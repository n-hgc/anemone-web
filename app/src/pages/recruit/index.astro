<script>
  // FAQアコーディオンの動作
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.recruit-faq__item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.recruit-faq__question');
      const answer = item.querySelector('.recruit-faq__answer');
      const icon = item.querySelector('.recruit-faq__icon');
      
      if (question && answer && icon) {
        question.addEventListener('click', function() {
          const isActive = answer.classList.contains('active');
          
          // 他のFAQを閉じる
          faqItems.forEach(otherItem => {
            const otherAnswer = otherItem.querySelector('.recruit-faq__answer');
            const otherIcon = otherItem.querySelector('.recruit-faq__icon');
            if (otherAnswer && otherIcon) {
              otherAnswer.classList.remove('active');
              otherIcon.textContent = '+';
            }
          });
          
          // クリックされたFAQを開く/閉じる
          if (!isActive) {
            answer.classList.add('active');
            icon.textContent = '-';
          }
        });
      }
    });
  });
</script>