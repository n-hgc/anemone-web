  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.recruit-faq__item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.recruit-faq__question');
      const answer = item.querySelector('.recruit-faq__answer');
      const icon = item.querySelector('.recruit-faq__icon');
      
