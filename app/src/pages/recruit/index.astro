          });
          
          // ã‚¯ãƒªãƒƒã‚¯ã•ã‚ŒãŸFAQã‚’é–‹ã/é–‰ã˜ã‚‹
          if (!isActive) {
            answer.classList.add('active');
            icon.textContent = '-';
          }
        });
      }
    });
