---
import RecruitHeader from '../../components/RecruitHeader.astro';
import RecruitSalonCard from '../../components/RecruitSalonCard.astro';
import RecruitStaffCard from '../../components/RecruitStaffCard.astro';
import { generateRecruitJsonLd } from '../../lib/seo/jsonld';
import recruitSalonsData from '../../data/recruit-salons.json';
import recruitStaffData from '../../data/recruit-staff.json';

// 採用ページのJSON-LDを生成
const jsonLd = generateRecruitJsonLd();

const { salons, icons } = recruitSalonsData;
const { staff } = recruitStaffData;

const title = "採用情報 - little";
const description = "littleでは美容師・スタイリストを募集しています。お客様に喜んでいただけるサービスを一緒に提供しませんか？";
const image = "https://images.unsplash.com/photo-1580618672591-eb180b1a973f?w=1200&h=630&fit=crop";
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- グローバルCSSの読み込み -->
    <link rel="stylesheet" href="/src/styles/global.css">
    
    <!-- フォントの読み込み -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New:wght@400;500;700&family=Noto+Serif+JP:wght@400;500;700&family=Shippori+Mincho:wght@400;500;700&display=swap" rel="stylesheet">
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    
    <title>{title}</title>
    
    <style>
      /* ヘッダー固定とメインコンテンツのマージン調整 */
      .main-content {
        margin-top: 80px; /* PC版のヘッダー高さ */
      }
      
      @media (max-width: 1023px) {
        .main-content {
          margin-top: 75px; /* タブレット版のヘッダー高さ */
        }
      }
      
      @media (max-width: 767px) {
        .main-content {
          margin-top: 64px; /* モバイル版のヘッダー高さ */
        }
      }
    </style>
  </head>
  <body>
    <!-- recruitページ専用ヘッダー -->
    <RecruitHeader />
  
  <!-- ページ全体の背景をbeigeに設定 -->
  <div class="bg-beige">
    
  <!-- ヒーローセクション -->
    <section id="title" class="recruit-hero">
      <div class="recruit-hero__container">
        <!-- 左側コンテンツ -->
        <div class="recruit-hero__left">
          <div class="recruit-hero__logo">
            <img src="/images/header/logo.png" alt="little" />
          </div>
          <div class="recruit-hero__text">
            <p class="recruit-hero__description">
              “自分らしく働ける”<br>全国展開なのに個性が活きる自由なサロン</p>
          </div>
        </div>
        
        <!-- 右側画像 -->
        <div class="recruit-hero__right">
          <img 
            src="/images/recruit/hero-image-1.png" 
            alt="littleサロンの店内" 
            class="recruit-hero__main-image"
          />
          <div class="recruit-hero__overlay">
            <img src="/images/recruit/hero-text.svg" alt="Be yourself" class="recruit-hero__overlay-text" />
          </div>
        </div>
    </div>
          <div class="recruit-hero__images">
            <div class="recruit-hero__image-item">
              <img src="/images/recruit/hero-image-2.png" alt="スタイリストの様子" />
            </div>
            <div class="recruit-hero__image-item">
              <img src="/images/recruit/hero-image-3.png" alt="カットの様子" />
            </div>
            <div class="recruit-hero__image-item">
              <img src="/images/recruit/hero-image-4.png" alt="シャンプーの様子" />
            </div>
          </div>
  </section>

    <!-- littleとはセクション -->
    <section id="about" class="recruit-about">
      <div class="recruit-about__container">
        <div class="recruit-about__content">
          <!-- 左側：テキストコンテンツ -->
          <div class="recruit-about__text-section">
            <h2 class="recruit-about__title">littleとは</h2>
            <p class="recruit-about__subtitle">全国展開で「わたしらしさ」が活きるサロン</p>
            <div class="recruit-about__text">
              <p>
                little (リトル)は、全国100店舗以上を展開する美容室ブランドです。
                <br>スタイリスト一人ひとりが自分らしく活躍できる環境を整え、ヘアケア商材、美容機器など最新のアイテムやトレンドも積極的に取り入れています。
                <br>お客様に新しい体験を届けながら、自身も成長できる場所として、心地良さと自由な働き方を叶えられるサロンが little です。
              </p>
            </div>
          </div>
          
          <!-- 右側：画像コンテンツ -->
          <div class="recruit-about__images-container">
          <div class="recruit-about__images-section">
            <div class="recruit-about__image">
              <img 
                src="/images/recruit/hero-image-2.png" 
                alt="littleサロンのスタイリングエリア" 
              />
            </div>
          </div>
          <div class="recruit-about__images-section">
            <div class="recruit-about__image">
              <img 
                src="/images/recruit/hero-image-3.png" 
                alt="littleサロンのラウンジエリア" 
              />
            </div>
          </div>
          </div>
        </div>
    </div>
  </section>

    <!-- 応募CTA（上部） -->
    <section class="recruit-cta-top">
      <div class="recruit-cta-top__container">
        <h2 class="recruit-cta-top__title">応募やサロン見学はこちらから</h2>
        <div class="recruit-cta-top__content">
          <!-- メール -->
          <div class="recruit-cta-top__column">
            <h3 class="recruit-cta-top__column-title">メール</h3>
            <p class="recruit-cta-top__column-description">
              サロン見学・面接を<br>
              すぐにご希望の方はこちら
            </p>
            <a href="mailto:recruit@little-salon.com" class="recruit-cta-top__btn recruit-cta-top__btn--mail">
              <span class="recruit-cta-top__btn-text">面接・見学応募メール</span>
              <img src="/images/icons/icn_right_arrow.svg" alt="右矢印" class="recruit-cta-top__btn-icon" />
            </a>
          </div>
          
          <!-- 公式LINE -->
          <div class="recruit-cta-top__column">
            <h3 class="recruit-cta-top__column-title">公式LINE</h3>
            <p class="recruit-cta-top__column-description">
              まずは詳細を知りたい<br>
              気軽に相談したい方はこちら
            </p>
            <a href="https://line.me/R/ti/p/@little-salon" class="recruit-cta-top__btn recruit-cta-top__btn--line">
              <span class="recruit-cta-top__btn-text">公式LINEヘチャット相談</span>
              <img src="/images/icons/icn_right_arrow.svg" alt="右矢印" class="recruit-cta-top__btn-icon" />
            </a>
            </div>
          
          <!-- お電話 -->
          <div class="recruit-cta-top__column">
            <h3 class="recruit-cta-top__column-title">お電話</h3>
            <div class="recruit-cta-top__phone-info">
              <p class="recruit-cta-top__phone-number">050-6655-1632</p>
              <p class="recruit-cta-top__phone-text">受付時間 10:00-17:00<br>(年末年始を除く)</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 働く魅力セクション -->
    <section id="appeal" class="recruit-appeal">
      <div class="recruit-appeal__container">
        <h2 class="recruit-appeal__title">littleで働く魅力</h2>
        <div class="recruit-appeal__content">
          <div class="recruit-appeal__image">
            <img 
              src="/images/recruit/hero-image-2.png" 
              alt="littleサロンで働くスタッフの様子" 
          />
        </div>
          <div class="recruit-appeal__text">
            <p>
              全国に広がるlittleは、どこでも変わらず、安心して働けるサロン。<br>指名がなくても安定した集客があり、SNSや独立支援も充実。働き方も、場所も、キャリアも、自分で選んでいい。未来をひらくすべての美容師さんへ。
            </p>
          </div>
      </div>
    </div>
  </section>

    <!-- 働く環境・サロン紹介セクション -->
    <section id="salon" class="recruit-environment">
      <div class="recruit-environment__container">
        <h2 class="recruit-environment__title">働く環境・サロン紹介</h2>
        
        <!-- 統計データ -->
        <div class="recruit-environment__stats">
          <div class="recruit-environment__stat-item">
            <img src="/images/recruit/salondata_01.png" alt="全国店舗数" class="recruit-environment__stat-image" />
          </div>
          <div class="recruit-environment__stat-item">
            <img src="/images/recruit/salondata_02.png" alt="FCオーナー数" class="recruit-environment__stat-image" />
          </div>
          <div class="recruit-environment__stat-item">
            <img src="/images/recruit/salondata_03.png" alt="スタイリスト数" class="recruit-environment__stat-image" />
          </div>
          <div class="recruit-environment__stat-item">
            <img src="/images/recruit/salondata_04.png" alt="歩合制度" class="recruit-environment__stat-image" />
          </div>
        </div>
      
        <!-- 求人検索 -->
            <h3 class="recruit-environment__search-title">求人募集中の店舗</h3>
        <div class="recruit-environment__search">
          <div class="recruit-environment__search-content">
            <p class="recruit-environment__search-description">
              little (リトル)は、全国の店舗ごとにアシスタント・スタイリスト・店長ポジションを目指せる募集枠がございます。店舗見学も可能ですので、ぜひ気軽にご相談ください。
            </p>
            
            <div class="recruit-environment__search-form">
              <div class="recruit-environment__search-section">
                <h4 class="recruit-environment__search-section-title">条件検索</h4>
                <div class="recruit-environment__search-row">
                  <label class="recruit-environment__search-label">店舗エリア</label>
                  <select class="recruit-environment__search-select">
                    <option>選択してください</option>
                    <option>北海道</option>
                    <option>東北</option>
                    <option>関東</option>
                    <option>中部</option>
                    <option>関西</option>
                    <option>中国</option>
                    <option>四国</option>
                    <option>九州</option>
                  </select>
                </div>
                <div class="recruit-environment__search-row">
                  <label class="recruit-environment__search-label">募集職種</label>
                  <select class="recruit-environment__search-select">
                    <option>選択してください</option>
                    <option>アシスタント</option>
                    <option>スタイリスト</option>
                    <option>店長</option>
                  </select>
                </div>
                <div class="recruit-environment__search-row">
                  <label class="recruit-environment__search-label">雇用形態</label>
                  <select class="recruit-environment__search-select">
                    <option>選択してください</option>
                    <option>正社員</option>
                    <option>業務委託</option>
                    <option>パート</option>
                  </select>
                </div>
              </div>
              
              <div class="recruit-environment__search-section">
                <h4 class="recruit-environment__search-section-title">フリーワード検索</h4>
                <div class="recruit-environment__search-row">
                  <input 
                    type="text" 
                    placeholder="サロン名・地域名で検索" 
                    class="recruit-environment__search-input"
                  />
                </div>
              </div>
              
              <button class="recruit-environment__search-btn">
                <span>指定した条件で検索する</span>
                <img src="/images/icons/icn_search.svg" alt="検索" class="recruit-environment__search-btn-icon" />
              </button>
            </div>
          </div>
          
          <div class="recruit-environment__search-map">
            <img src="/images/main/illust_japan.png" alt="日本地図" class="recruit-environment__map-image" />
          </div>
        </div>

        <!-- サロン一覧 -->
        <div class="recruit-environment__salons">
          <h3 class="recruit-environment__salons-title">北海道エリア募集店舗一覧</h3>
          <div class="recruit-environment__salon-grid">
            {salons.map(salon => (
              <RecruitSalonCard salon={salon} icons={icons} />
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- 働くスタッフの声セクション -->
    <section class="recruit-staff-voices">
      <div class="recruit-staff-voices__container">
        <h2 class="recruit-staff-voices__title">働くスタッフの声</h2>
        <div class="recruit-staff-voices__grid">
          {staff.map(staffMember => (
            <RecruitStaffCard staff={staffMember} />
          ))}
        </div>
      </div>
    </section>

    <!-- 募集要項セクション -->
    <section id="requirements" class="recruit-requirements">
      <div class="recruit-requirements__container">
        <h2 class="recruit-requirements__title">募集要項</h2>
        <div class="recruit-requirements__grid">
          <!-- スタイリスト -->
          <div class="recruit-requirements__card">
            <h3 class="recruit-requirements__card-title">スタイリスト</h3>
            <div class="recruit-requirements__details">
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">雇用形態：</span>
                <span class="recruit-requirements__value">正社員・パート・アルバイト</span>
          </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">給与：</span>
                <span class="recruit-requirements__value">時給1,200円〜（経験により優遇）</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">勤務地：</span>
                <span class="recruit-requirements__value">全国の店舗</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">勤務時間：</span>
                <span class="recruit-requirements__value">10:00-20:00（シフト制）</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">休日：</span>
                <span class="recruit-requirements__value">週2日以上</span>
              </div>
            </div>
            <button class="recruit-requirements__btn">詳細を見る</button>
        </div>
        
          <!-- アシスタント -->
          <div class="recruit-requirements__card">
            <h3 class="recruit-requirements__card-title">アシスタント</h3>
            <div class="recruit-requirements__details">
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">雇用形態：</span>
                <span class="recruit-requirements__value">正社員・パート</span>
          </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">給与：</span>
                <span class="recruit-requirements__value">月給25万円〜（経験により優遇）</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">勤務地：</span>
                <span class="recruit-requirements__value">東京・大阪・名古屋</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">勤務時間：</span>
                <span class="recruit-requirements__value">9:00-19:00（シフト制）</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">休日：</span>
                <span class="recruit-requirements__value">週2日以上</span>
              </div>
            </div>
            <button class="recruit-requirements__btn">詳細を見る</button>
        </div>
        
          <!-- レセプション -->
          <div class="recruit-requirements__card">
            <h3 class="recruit-requirements__card-title">レセプション</h3>
            <div class="recruit-requirements__details">
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">雇用形態：</span>
                <span class="recruit-requirements__value">パート・アルバイト</span>
          </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">給与：</span>
                <span class="recruit-requirements__value">時給1,000円〜</span>
        </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">勤務地：</span>
                <span class="recruit-requirements__value">全国の店舗</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">勤務時間：</span>
                <span class="recruit-requirements__value">10:00-18:00（シフト制）</span>
              </div>
              <div class="recruit-requirements__detail-item">
                <span class="recruit-requirements__label">休日：</span>
                <span class="recruit-requirements__value">週2日以上</span>
              </div>
            </div>
            <button class="recruit-requirements__btn">詳細を見る</button>
          </div>
        </div>
      </div>
    </section>

    <!-- よくある質問セクション -->
    <section id="faq" class="recruit-faq">
      <div class="recruit-faq__container">
        <h2 class="recruit-faq__title">よくある質問</h2>
        <div class="recruit-faq__list">
          <div class="recruit-faq__item">
            <div class="recruit-faq__question">
              <span>Q. 未経験でも応募できますか？</span>
              <span class="recruit-faq__icon">+</span>
          </div>
            <div class="recruit-faq__answer">
              <p>はい、未経験の方でも応募可能です。研修制度が充実しており、先輩スタッフが丁寧に指導いたします。</p>
            </div>
          </div>
          
          <div class="recruit-faq__item">
            <div class="recruit-faq__question">
              <span>Q. どのような働き方がありますか？</span>
              <span class="recruit-faq__icon">+</span>
            </div>
            <div class="recruit-faq__answer">
              <p>正社員、パート、アルバイトの3つの働き方があります。ライフスタイルに合わせて選択していただけます。</p>
            </div>
          </div>
          
          <div class="recruit-faq__item">
            <div class="recruit-faq__question">
              <span>Q. どんな人が働いていますか？</span>
              <span class="recruit-faq__icon">+</span>
            </div>
            <div class="recruit-faq__answer">
              <p>20代から40代まで幅広い年齢層のスタッフが働いています。経験豊富なベテランから新卒まで、多様なメンバーが活躍しています。</p>
            </div>
          </div>
          
          <div class="recruit-faq__item">
            <div class="recruit-faq__question">
              <span>Q. 研修制度はありますか？</span>
              <span class="recruit-faq__icon">+</span>
            </div>
            <div class="recruit-faq__answer">
              <p>技術向上のための研修制度が充実しています。外部研修への参加費補助もあります。</p>
            </div>
          </div>
          
          <div class="recruit-faq__item">
            <div class="recruit-faq__question">
              <span>Q. 昇進の機会はありますか？</span>
              <span class="recruit-faq__icon">+</span>
            </div>
            <div class="recruit-faq__answer">
              <p>実力に応じて昇進の機会があります。マネージャーや店長への昇進も可能です。</p>
            </div>
        </div>
      </div>
    </div>
  </section>

    <!-- 応募CTA（下部） -->
    <section id="entry" class="recruit-cta-bottom">
      <div class="recruit-cta-bottom__container">
        <h2 class="recruit-cta-bottom__title">ご応募はこちら</h2>
        <div class="recruit-cta-bottom__buttons">
          <a href="#entry" class="recruit-cta-bottom__btn recruit-cta-bottom__btn--entry">
            エントリー
          </a>
          <a href="#line" class="recruit-cta-bottom__btn recruit-cta-bottom__btn--line">
            LINEで応募
          </a>
          <div class="recruit-cta-bottom__phone">
            <span class="recruit-cta-bottom__phone-number">050-555-1632</span>
          </div>
      </div>
    </div>
  </section>

  </div>
  
  </body>
</html>

<style>
  @import "tailwindcss";
  
  /* CSS変数の定義 */
  :root {
    --color-beige: #FAF4E8;
    --color-brown: #69552E;
    --color-brown-light: #8B6F47;
    --color-white: #FFFFFF;
    --color-black: #3D3D3D;
    --color-grey-light: #E5E5E5;
    --color-grey-medium: #666666;
    --font-family-yumincho: 'Yu Mincho', 'YuMincho', 'Hiragino Mincho Pro', 'MS PMincho', serif;
    --font-family-zenkaku: 'Zen Kaku Gothic New', 'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Meiryo', sans-serif;
    --font-weight-regular: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
  }
  
  /* ページ全体の背景 */
  .bg-beige {
    background-color: var(--color-beige);
    min-height: 100vh;
  }

  /* ヒーローセクション */
  .recruit-hero {
    padding: 104px 0 24px 0;
    background-color: var(--color-beige);
