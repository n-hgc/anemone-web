        // クリックされたタブにactiveクラスを追加
        tab.classList.add('active');

        const category = (tab as HTMLElement).dataset.category;
        // グループの表示切替
        newsGroups.forEach(group => {
          const groupCategory = (group as HTMLElement).dataset.category;
          (group as HTMLElement).style.display = groupCategory === category ? 'block' : 'none';
        });
      });
    });

    // サロンフィルター機能
    let currentFilter = {
      region: '',
      searchTerm: ''
    };

    // サロンデータを取得（サーバーサイドで読み込まれたデータ）
    let salonData: any[] = [];
    fetch('/data/salons.index.json')
      .then(response => response.json())
      .then(data => {
        salonData = data;
        console.log('サロンデータを読み込みました:', salonData);
      })
      .catch(error => {
        console.error('サロンデータの読み込みに失敗しました:', error);
      });

    // 地域ボタンのクリックイベント
    const regionButtons = document.querySelectorAll('.region-btn');
    regionButtons.forEach(button => {
      button.addEventListener('click', () => {
        const clickedRegion = button.getAttribute('data-region') || '';
        
        // 選択中のボタンを再度クリックした場合はリセット
        if (currentFilter.region === clickedRegion) {
          // すべてのボタンからactiveクラスを削除
          regionButtons.forEach(btn => btn.classList.remove('active'));
          // フィルターをリセット
          currentFilter.region = '';
        } else {
          // すべてのボタンからactiveクラスを削除
          regionButtons.forEach(btn => btn.classList.remove('active'));
          // クリックされたボタンにactiveクラスを追加
          button.classList.add('active');
          // フィルターを更新
          currentFilter.region = clickedRegion;
        }
        
        applyFilters();
      });
    });

    // 検索ボタンのクリックイベント（PC用）
    const salonFilterSearchBtn = document.getElementById('salon-search-btn') as HTMLButtonElement;
    const salonFilterSearchInput = document.getElementById('salon-search-input') as HTMLInputElement;
    
    salonFilterSearchBtn?.addEventListener('click', () => {
      currentFilter.searchTerm = salonFilterSearchInput?.value || '';
      applyFilters();
    });

    // 検索入力のEnterキーイベント（PC用）
    salonFilterSearchInput?.addEventListener('keypress', (e: KeyboardEvent) => {
      if (e.key === 'Enter') {
        currentFilter.searchTerm = salonFilterSearchInput.value || '';
        applyFilters();
      }
    });

    // 検索ボタンのクリックイベント（SP用）
    const salonFilterSearchBtnSp = document.getElementById('salon-search-btn-sp') as HTMLButtonElement;
    const salonFilterSearchInputSp = document.getElementById('salon-search-input-sp') as HTMLInputElement;
    
    salonFilterSearchBtnSp?.addEventListener('click', () => {
      currentFilter.searchTerm = salonFilterSearchInputSp?.value || '';
      applyFilters();
    });

    // 検索入力のEnterキーイベント（SP用）
    salonFilterSearchInputSp?.addEventListener('keypress', (e: KeyboardEvent) => {
      if (e.key === 'Enter') {
        currentFilter.searchTerm = salonFilterSearchInputSp.value || '';
        applyFilters();
      }
    });

    // フィルターを適用する関数
    function applyFilters() {
      const titleElement = document.getElementById('salon-filter-title');
      
      // タイトルを更新
      let filterText = '';
      if (currentFilter.searchTerm) {
        filterText = `「${currentFilter.searchTerm}」`;
      } else if (currentFilter.region) {
        const regionNames: { [key: string]: string } = {
          'hokkaido': '北海道',
          'tohoku': '東北',
          'kanto': '関東',
          'chubu': '中部',
          'kinki': '近畿',
          'shikoku': '四国',
          'chugoku': '中国',
          'kyushu-okinawa': '九州・沖縄'
        };
        filterText = `「${regionNames[currentFilter.region] || currentFilter.region}」`;
      }
      
      if (titleElement) {
        titleElement.textContent = `${filterText}店舗一覧`;
      }

      // サロンカードの表示/非表示を切り替え（地域ボタンは除外）
      const salonCards = document.querySelectorAll('#salon-cards-container [data-region]');
      salonCards.forEach(card => {
        
        const region = card.getAttribute('data-region') || '';
        const name = card.getAttribute('data-name') || '';
        const prefecture = card.getAttribute('data-prefecture') || '';
        const prefectureName = card.getAttribute('data-prefecture-name') || '';
        const city = card.getAttribute('data-city') || '';
        const cityName = card.getAttribute('data-city-name') || '';
        const access = card.getAttribute('data-access') || '';
        const furigana = card.getAttribute('data-furigana') || '';
        
        // 地域フィルター
        // 地域が選択されている場合: その地域のサロンのみ
        // 地域が未選択の場合: 検索キーワードがあれば全てのサロン、なければ非表示
        const regionMatch = currentFilter.region 
          ? region === currentFilter.region 
          : (currentFilter.searchTerm ? true : false);
        
        // デバッグ情報を追加
        console.log(`サロン: ${name}, 地域: ${region}, フィルター: ${currentFilter.region}, マッチ: ${regionMatch}`);
        
        // 検索フィルター - すべてのデータで検索
        const searchMatch = !currentFilter.searchTerm || 
          name.toLowerCase().includes(currentFilter.searchTerm.toLowerCase()) ||
          prefectureName.toLowerCase().includes(currentFilter.searchTerm.toLowerCase()) ||
          cityName.toLowerCase().includes(currentFilter.searchTerm.toLowerCase()) ||
          access.toLowerCase().includes(currentFilter.searchTerm.toLowerCase()) ||
          furigana.toLowerCase().includes(currentFilter.searchTerm.toLowerCase());
        
        if (regionMatch && searchMatch) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // フィルター結果のカウントを表示
      const visibleCards = Array.from(salonCards).filter(card => 
        (card as HTMLElement).style.display !== 'none'
      );
      console.log(`フィルター結果: ${visibleCards.length}件のサロンが表示されています`);
    }

    // 初期状態ではすべてのサロンを表示（ボタンはアクティブにしない）
    // 全ての地域ボタンからactiveクラスを削除して、未選択状態にする
    regionButtons.forEach(btn => btn.classList.remove('active'));

    // 初期フィルターを適用
    applyFilters();
  });
</script>