<script>
  // ヒーローセクションのスライドショー機能
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelectorAll('.hero-slide');
    const paginationDots = document.querySelectorAll('.hero-pagination-dot');
    const searchBtn = document.querySelector('.hero-search-btn');
    let currentSlide = 0;
    let slideInterval: ReturnType<typeof setInterval> | undefined;

    // デバッグ情報
    console.log('スライド数:', slides.length);
    console.log('ページネーションドット数:', paginationDots.length);
    console.log('検索ボタン:', searchBtn);

    // スライドを切り替える関数
    function showSlide(index: number) {
      console.log('スライド切り替え:', index);
      // すべてのスライドを非アクティブにする
      slides.forEach(slide => slide.classList.remove('active'));
      paginationDots.forEach(dot => dot.classList.remove('active'));
      
      // 指定されたスライドをアクティブにする
      if (slides[index]) {
        slides[index].classList.add('active');
        console.log('アクティブスライド:', slides[index]);
      }
      if (paginationDots[index]) {
        paginationDots[index].classList.add('active');
      }
      
      currentSlide = index;
    }

    // 次のスライドに移動
    function nextSlide() {
      const nextIndex = (currentSlide + 1) % slides.length;
      showSlide(nextIndex);
    }

    // 自動スライド開始
    function startSlideShow() {
      slideInterval = setInterval(nextSlide, 5000); // 5秒間隔
    }

    // 自動スライド停止
    function stopSlideShow() {
      clearInterval(slideInterval);
    }

    // ページネーションドットのクリックイベント
    paginationDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
        stopSlideShow();
        startSlideShow(); // 再開
      });
    });

    // 検索ボタンのクリックイベント
    searchBtn?.addEventListener('click', () => {
      // サロン一覧セクションにスクロール
      const salonsSection = document.getElementById('salons');
      if (salonsSection) {
        salonsSection.scrollIntoView({ behavior: 'smooth' });
      }
    });

    // マウスホバーで自動スライドを一時停止
    const heroSection = document.querySelector('.hero-section');
    heroSection?.addEventListener('mouseenter', stopSlideShow);
    heroSection?.addEventListener('mouseleave', startSlideShow);

    // 最初のスライドを表示
    if (slides.length > 0) {
      showSlide(0);
    }

    // 自動スライド開始
    startSlideShow();
    
    // ヘアカタログのタブ機能
    const hairstyleTabs = document.querySelectorAll('.hairstyle-tab');
    hairstyleTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // すべてのタブからactiveクラスを削除
        hairstyleTabs.forEach(t => t.classList.remove('active'));
        // クリックされたタブにactiveクラスを追加
        tab.classList.add('active');
        
        // ここでカテゴリに応じたフィルタリング処理を実装
        const category = (tab as HTMLElement).dataset.category;
        console.log('選択されたカテゴリ:', category);
        // 実際の実装では、ここでヘアスタイルの表示を切り替える
      });
    });
    
    // サロン検索機能
    const salonSearchInput = document.querySelector('.salon-search-input');
    const salonSearchBtn = document.querySelector('.salon-search-btn');
    const regionBtns = document.querySelectorAll('.region-btn');
    
    // 検索ボタンのクリックイベント
    salonSearchBtn?.addEventListener('click', () => {
      const searchTerm = (salonSearchInput as HTMLInputElement)?.value.trim();
      if (searchTerm) {
        console.log('検索キーワード:', searchTerm);
        // 実際の実装では、ここでサロンの検索処理を実行
        filterSalons(searchTerm);
      }
    });
    
    // エンターキーでの検索
    salonSearchInput?.addEventListener('keydown', (e: Event) => {
      const keyboardEvent = e as KeyboardEvent;
      if (keyboardEvent.key === 'Enter') {
        (salonSearchBtn as HTMLButtonElement)?.click();
      }
    });
    
    // 地域ボタンのクリックイベント
    regionBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // すべての地域ボタンからactiveクラスを削除
        regionBtns.forEach(b => b.classList.remove('active'));
        // クリックされたボタンにactiveクラスを追加
        btn.classList.add('active');
        
        const region = btn.textContent;
        console.log('選択された地域:', region);
        // 実際の実装では、ここで地域に応じたサロンのフィルタリングを実行
        filterSalonsByRegion(region);
      });
    });
    
    // サロン検索関数
    function filterSalons(searchTerm: string) {
      const salonCards = document.querySelectorAll('.salon-card');
      salonCards.forEach(card => {
        const salonName = card.querySelector('.salon-card-name')?.textContent;
        const salonLocation = card.querySelector('.salon-card-location span')?.textContent;
        
        if (salonName?.includes(searchTerm) || salonLocation?.includes(searchTerm)) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }
    
    // 地域別サロン検索関数
    function filterSalonsByRegion(region: string) {
      const salonCards = document.querySelectorAll('.salon-card');
      salonCards.forEach(card => {
        const salonLocation = card.querySelector('.salon-card-location span')?.textContent;
        
        if (salonLocation?.includes(region)) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }
    
    // ニュースタブ機能
    const newsTabs = document.querySelectorAll('.news-tab');
    newsTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // すべてのタブからactiveクラスを削除
        newsTabs.forEach(t => t.classList.remove('active'));
        // クリックされたタブにactiveクラスを追加
        tab.classList.add('active');
        
        // ここでカテゴリに応じたフィルタリング処理を実装
        const category = (tab as HTMLElement).dataset.category;
        console.log('選択されたニュースカテゴリ:', category);
        // 実際の実装では、ここでニュースの表示を切り替える
      });
    });
  });
</script>