<script>
  // ヒーローセクションのスライドショー機能
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelectorAll('.hero-slide');
    const paginationDots = document.querySelectorAll('.pagination-stripe');
    const searchBtn = document.querySelector('.hero-search-btn');
    let currentSlide = 0;
    let slideInterval: ReturnType<typeof setInterval> | undefined;

    // デバッグ情報
    console.log('スライド数:', slides.length);
    console.log('ページネーションドット数:', paginationDots.length);
    console.log('検索ボタン:', searchBtn);

    // スライドを切り替える関数
    function showSlide(index: number) {
      // すべてのスライドを非アクティブにする
      slides.forEach(slide => slide.classList.remove('active'));
      paginationDots.forEach(dot => dot.classList.remove('active'));
      
      // 指定されたスライドをアクティブにする
      if (slides[index]) {
        slides[index].classList.add('active');
      }
      if (paginationDots[index]) {
        paginationDots[index].classList.add('active');
      }
      
      currentSlide = index;
    }

    // 次のスライドに移動
    function nextSlide() {
      const nextIndex = (currentSlide + 1) % slides.length;
      showSlide(nextIndex);
    }

    // 自動スライド開始
    function startSlideShow() {
      slideInterval = setInterval(nextSlide, 5000); // 5秒間隔
    }

    // 自動スライド停止
    function stopSlideShow() {
      clearInterval(slideInterval);
    }

    // ページネーションストライプのクリックイベント
    paginationDots.forEach((stripe, index) => {
      stripe.addEventListener('click', () => {
        showSlide(index);
        stopSlideShow();
        startSlideShow(); // 再開
      });
    });

    // 検索ボタンのクリックイベント
    searchBtn?.addEventListener('click', () => {
      // サロン一覧セクションにスクロール
      const salonsSection = document.getElementById('salons');
      if (salonsSection) {
        salonsSection.scrollIntoView({ behavior: 'smooth' });
      }
    });

    // マウスホバーで自動スライドを一時停止
    const heroSection = document.querySelector('.hero-section');
    heroSection?.addEventListener('mouseenter', stopSlideShow);
    heroSection?.addEventListener('mouseleave', startSlideShow);

    // 最初のスライドを表示
    if (slides.length > 0) {
      showSlide(0);
    }

    // 自動スライド開始
    startSlideShow();
    
    // ヘアカタログ: JSONを取得して描画 + タブフィルタ
    type HairstyleItem = { id: number; hairType: string; imageUrl: string; alt: string };
    let hairstyleItems: HairstyleItem[] = [];
    let currentCategory = 'all';
    let currentDisplayCount = 12; // 初期表示件数
    const ITEMS_PER_LOAD = 12; // 追加読み込み件数

    function renderHairstyles(items: HairstyleItem[]) {
      console.log('renderHairstyles呼び出し:', items.length, '件');
      const grid = document.getElementById('hairstyle-grid');
      if (!grid) {
        console.error('hairstyle-grid要素が見つかりません');
        return;
      }
      
      grid.innerHTML = '';
      const frag = document.createDocumentFragment();
      
      items.forEach((item, index) => {
        console.log(`アイテム${index}:`, item.hairType, item.imageUrl);
        const wrapper = document.createElement('div');
        wrapper.className = 'hairstyle-item';
        wrapper.setAttribute('data-hair-type', item.hairType);
        
        const img = document.createElement('img');
        img.src = item.imageUrl;
        img.alt = item.alt || 'ヘアスタイル';
        img.className = 'hairstyle-image';
        
        wrapper.appendChild(img);
        frag.appendChild(wrapper);
      });
      
      grid.appendChild(frag);
      console.log('ヘアスタイルグリッド更新完了:', grid.children.length, '個の要素');
    }

    function applyHairstyleFilter(category: string, resetCount: boolean = true) {
      console.log('ヘアスタイルフィルタ適用:', category);
      currentCategory = category;
      
      if (resetCount) {
        currentDisplayCount = 12; // タブ切り替え時はリセット
      }
      
      let filteredItems: HairstyleItem[];
      
      if (category === 'all') {
        filteredItems = hairstyleItems;
      } else {
        filteredItems = hairstyleItems.filter(i => i.hairType === category);
      }
      
      // 表示件数を制限
      const displayItems = filteredItems.slice(0, currentDisplayCount);
      
      console.log(`フィルタ結果: ${displayItems.length}件表示 (全${filteredItems.length}件中)`);
      renderHairstyles(displayItems);
      
      // もっと見るボタンの表示制御
      updateMoreButton(filteredItems.length > currentDisplayCount);
    }
    
    function updateMoreButton(hasMore: boolean) {
      const moreBtn = document.querySelector('.hairstyle-more-btn') as HTMLElement;
      if (moreBtn) {
        if (hasMore) {
          moreBtn.style.display = 'flex';
        } else {
          moreBtn.style.display = 'none';
        }
      }
    }
    
    function loadMoreHairstyles() {
      currentDisplayCount += ITEMS_PER_LOAD;
      applyHairstyleFilter(currentCategory, false);
    }

    fetch('/data/hairstyles.index.json')
      .then(r => r.json())
      .then((data: HairstyleItem[]) => {
        hairstyleItems = Array.isArray(data) ? data : [];
        console.log('ヘアスタイルデータ読み込み完了:', hairstyleItems.length, '件');
        // 初期表示はALLタブで表示
        applyHairstyleFilter('all');
      })
      .catch(err => {
        console.error('ヘアスタイルJSON読込失敗', err);
        // エラー時もALLタブで表示（空配列）
        applyHairstyleFilter('all');
      });

    const hairstyleTabs = document.querySelectorAll('.hairstyle-tab');
    console.log('ヘアスタイルタブ数:', hairstyleTabs.length);
    
    hairstyleTabs.forEach((tab, index) => {
      console.log(`タブ${index}:`, tab.textContent, 'data-category:', (tab as HTMLElement).dataset.category);
      
      tab.addEventListener('click', (e) => {
        e.preventDefault();
        console.log('タブクリックイベント発火:', tab.textContent);
        
        // すべてのタブからactiveクラスを削除
        hairstyleTabs.forEach(t => t.classList.remove('active'));
        // クリックされたタブにactiveクラスを追加
        tab.classList.add('active');
        
        const category = (tab as HTMLElement).dataset.category || 'all';
        console.log('選択されたカテゴリ:', category);
        console.log('現在のヘアスタイルアイテム数:', hairstyleItems.length);
        applyHairstyleFilter(category, true); // タブ切り替え時はリセット
      });
    });
    
    // もっと見るボタンのイベントリスナー
    const moreBtn = document.querySelector('.hairstyle-more-btn');
    if (moreBtn) {
      moreBtn.addEventListener('click', (e) => {
        e.preventDefault();
        console.log('もっと見るボタンクリック');
        loadMoreHairstyles();
      });
    }
    
    // サロン検索機能
    const salonSearchInput = document.querySelector('.salon-search-input');
    const salonSearchBtn = document.querySelector('.salon-search-btn');
    const regionBtns = document.querySelectorAll('.region-btn');
    
    // 検索ボタンのクリックイベント
    salonSearchBtn?.addEventListener('click', () => {
      const searchTerm = (salonSearchInput as HTMLInputElement)?.value.trim();
      if (searchTerm) {
        console.log('検索キーワード:', searchTerm);
        // 実際の実装では、ここでサロンの検索処理を実行
        filterSalons(searchTerm);
      }
    });
    
    // エンターキーでの検索
    salonSearchInput?.addEventListener('keydown', (e: Event) => {
      const keyboardEvent = e as KeyboardEvent;
      if (keyboardEvent.key === 'Enter') {
        (salonSearchBtn as HTMLButtonElement)?.click();
      }
    });
    
    // 地域ボタンのクリックイベント
    regionBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // すべての地域ボタンからactiveクラスを削除
        regionBtns.forEach(b => b.classList.remove('active'));
        // クリックされたボタンにactiveクラスを追加
        btn.classList.add('active');
        
        const region = btn.textContent;
        console.log('選択された地域:', region);
        // 実際の実装では、ここで地域に応じたサロンのフィルタリングを実行
        filterSalonsByRegion(region);
      });
    });
    
    // サロン検索関数
    function filterSalons(searchTerm: string) {
      const salonCards = document.querySelectorAll('.salon-card');
      salonCards.forEach(card => {
        const salonName = card.querySelector('.salon-card-name')?.textContent || '';
        const salonLocation = card.querySelector('.salon-card-location span')?.textContent || '';
        const salonAccess = card.querySelector('.salon-card-access span')?.textContent || '';
        
        if (salonName.toLowerCase().includes(searchTerm.toLowerCase()) || 
            salonLocation.toLowerCase().includes(searchTerm.toLowerCase()) ||
            salonAccess.toLowerCase().includes(searchTerm.toLowerCase())) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }
    
    // 地域別サロン検索関数
    function filterSalonsByRegion(region: string) {
      const salonCards = document.querySelectorAll('.salon-card');
      salonCards.forEach(card => {
        const salonLocation = card.querySelector('.salon-card-location span')?.textContent;
        
        if (salonLocation?.includes(region)) {
