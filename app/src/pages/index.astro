            <button class="hero-pagination-dot active" data-slide="0"></button>
            <button class="hero-pagination-dot" data-slide="1"></button>
            <button class="hero-pagination-dot" data-slide="2"></button>
          </div>
        </div>
      </div>
      
      <!-- Floating Action Button (PC用) -->
      <div class="hero-fab">
        <div class="hero-action-text">ネットからがお得</div>
        <button class="hero-search-btn" aria-label="店舗を選んで予約する">
          <div class="hero-btn-content">
            <svg class="hero-search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <div class="hero-btn-text">
              <div class="hero-btn-line">店舗を選んで</div>
              <div class="hero-btn-line">予約する</div>
            </div>
          </div>
        </button>
      </div>
      </div>
    </section>

    <!-- イントロダクションセクション -->
