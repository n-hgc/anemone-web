---
import Layout from '../layouts/Layout.astro';
import SalonCard from '../components/SalonCard.astro';
import NewsCard from '../components/NewsCard.astro';
import LocatorFilters from '../components/LocatorFilters.astro';
import { componentClasses, responsive } from '../lib/design-system';
import type { Salon, News, Prefecture } from '../types';

// モックデータをインポート
import salonsData from '../data/salons.json';
import newsData from '../data/news.json';
import prefecturesData from '../data/prefectures.json';

const salons: Salon[] = salonsData;
const news: News[] = newsData;
const prefectures: Prefecture[] = prefecturesData;

// 最新のニュース3件を取得
const latestNews = news.slice(0, 3);

// 店舗一覧のJSON-LDを生成
const salonJsonLd = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": salons.map((salon, index) => ({
    "@type": "HairSalon",
    "position": index + 1,
    "name": `アネモネ ${salon.name}`,
    "url": `https://anemone-salon.com/salon/${salon.id}`,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": salon.address,
      "addressRegion": salon.prefecture,
      "addressCountry": "JP"
    },
    "telephone": salon.tel
  }))
};
---

<Layout 
  title="アネモネサロン - 美容室・ヘアサロン"
  description="アネモネサロンは全国展開する美容室・ヘアサロンです。お客様一人ひとりに合ったスタイルをご提案いたします。"
  image="https://images.unsplash.com/photo-1560066984-138dadb4c035?w=1200&h=630&fit=crop"
  jsonLd={JSON.stringify(salonJsonLd)}
>
  <!-- ページ全体の背景をbeigeに設定 -->
  <div class="min-h-screen bg-beige">
    
    <!-- ヒーローセクション -->
    <section class="relative overflow-hidden bg-gradient-to-br from-brown via-brown_dark to-black py-24 lg:py-32">
      <!-- 背景装飾 -->
      <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-full h-full bg-black opacity-10"></div>
        <div class="absolute top-20 left-10 w-32 h-32 bg-white opacity-10 rounded-full blur-xl"></div>
        <div class="absolute top-40 right-20 w-48 h-48 bg-white opacity-5 rounded-full blur-2xl"></div>
        <div class="absolute bottom-20 left-1/4 w-24 h-24 bg-white opacity-10 rounded-full blur-lg"></div>
        <div class="absolute top-1/2 right-1/3 w-16 h-16 bg-white opacity-15 rounded-full blur-md"></div>
      </div>
      
      <div class={`relative ${responsive.spacing.container} text-center`}>
        <div class="max-w-4xl mx-auto">
          <h1 class={responsive.text.h2 + ' text-white mb-8 leading-tight tracking-tight'}>
            あなたの美しさを引き出す<br>
            <span class="text-beige">アネモネサロン</span>
          </h1>
          
          <p class={responsive.text.p + ' text-white/90 mb-4 font-light leading-relaxed'}>
            プロの技術と心のこもったサービスで<br>
            理想のスタイルを実現します
          </p>
          
          <p class={responsive.text.p + ' text-white/80 mb-12 font-light'}>
            全国展開する美容室・ヘアサロンで、お客様一人ひとりに合ったスタイルをご提案
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <a 
              href="#salons"
              class={componentClasses.button.primary + ' group inline-flex items-center justify-center px-8 py-4 bg-white text-brown rounded-2xl font-bold text-lg transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-brown/25'}
            >
              <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              サロンを探す
            </a>
            
            <a 
              href="#about"
              class={componentClasses.button.secondary + ' group inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white rounded-2xl font-bold text-lg transition-all duration-300 hover:bg-white hover:text-brown hover:scale-105 hover:shadow-2xl'}
            >
              <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              詳細を見る
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- 特徴セクション -->
    <section class={`${responsive.spacing.section}`}>
      <div class={responsive.spacing.container}>
        <div class="text-center mb-16">
          <h2 class={responsive.text.h2 + ' text-black mb-6'}>
            アネモネサロンの特徴
          </h2>
          <p class={responsive.text.p + ' text-grey_medium max-w-2xl mx-auto'}>
            お客様一人ひとりに寄り添ったサービスで、理想のスタイルを実現します
          </p>
        </div>
        
        <div class={responsive.grid['3']}>
          <div class={componentClasses.card.base}>
            <div class="h-48 bg-brown/10 rounded-t-lg flex items-center justify-center">
              <svg class="w-16 h-16 text-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class={responsive.text.h3 + ' text-black mb-3'}>
                プロの技術
              </h3>
              <p class={responsive.text.p + ' text-grey_medium'}>
                経験豊富なスタイリストが、お客様の髪質や骨格に合わせた最適なスタイルをご提案いたします。
              </p>
            </div>
          </div>
          
          <div class={componentClasses.card.base}>
            <div class="h-48 bg-brown/10 rounded-t-lg flex items-center justify-center">
              <svg class="w-16 h-16 text-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class={responsive.text.h3 + ' text-black mb-3'}>
                充実の設備
              </h3>
              <p class={responsive.text.p + ' text-grey_medium'}>
                最新の設備と高品質なヘアケア商品で、お客様に最高のサービスをご提供いたします。
              </p>
            </div>
          </div>
          
          <div class={componentClasses.card.base}>
            <div class="h-48 bg-brown/10 rounded-t-lg flex items-center justify-center">
              <svg class="w-16 h-16 text-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="p-6">
              <h3 class={responsive.text.h3 + ' text-black mb-3'}>
                アフターケア
              </h3>
              <p class={responsive.text.p + ' text-grey_medium'}>
                カット後も長く美しいスタイルを保つための、お家でのケア方法も丁寧にご指導いたします。
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 店舗一覧セクション -->
    <section id="salons" class={`${responsive.spacing.section}`}>
      <div class={responsive.spacing.container}>
        <div class="text-center mb-16">
          <h2 class={responsive.text.h2 + ' text-black mb-6'}>
            店舗一覧
          </h2>
          <p class={responsive.text.p + ' text-grey_medium max-w-2xl mx-auto'}>
            全国100店舗でお客様をお待ちしています。お近くの店舗をお探しください。
          </p>
        </div>
        
        <!-- フィルター -->
        <div class="mb-12">
          <LocatorFilters prefectures={prefectures} />
        </div>
        
        <!-- 店舗カード一覧 -->
        <div class={responsive.grid['3']}>
          {salons.slice(0, 6).map((salon) => (
            <SalonCard salon={salon} />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href="/salons"
            class={componentClasses.button.primary + ' inline-flex items-center px-8 py-4'}
          >
            すべての店舗を見る
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- ニュースセクション -->
    <section class={`${responsive.spacing.section}`}>
      <div class={responsive.spacing.container}>
        <div class="text-center mb-16">
          <h2 class={responsive.text.h2 + ' text-black mb-6'}>
            最新ニュース
          </h2>
          <p class={responsive.text.p + ' text-grey_medium max-w-2xl mx-auto'}>
            アネモネサロンからのお知らせや最新情報をお届けします
          </p>
        </div>
        
        <div class={responsive.grid['3']}>
          {latestNews.map((newsItem) => (
            <NewsCard news={newsItem} />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href="/news"
            class={componentClasses.button.secondary + ' inline-flex items-center px-8 py-4'}
          >
            すべてのニュースを見る
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTAセクション -->
    <section class={`${responsive.spacing.section} bg-brown`}>
      <div class={responsive.spacing.container}>
        <div class="text-center">
          <h2 class={responsive.text.h2 + ' text-white mb-6'}>
            今すぐご予約ください
          </h2>
          <p class={responsive.text.p + ' text-white/90 mb-8 max-w-2xl mx-auto'}>
            お客様のご来店をお待ちしております。お気軽にお問い合わせください。
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="tel:03-1234-5678"
              class={componentClasses.button.primary + ' inline-flex items-center justify-center px-8 py-4 bg-white text-brown'}
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              03-1234-5678
            </a>
            <a 
              href="/contact"
              class={componentClasses.button.secondary + ' inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white hover:bg-white hover:text-brown'}
            >
              お問い合わせ
            </a>
          </div>
        </div>
      </div>
    </section>
    
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>