<style>
  @import "tailwindcss";
  
  /* ヒーローセクションのスタイル */
  .hero-section {
    position: relative;
    background-color: var(--color-beige);
    min-height: 320px;
  }
  
  .hero-container {
    display: flex;
    padding: 24px 55px;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    align-self: stretch;
    height: 100%;
    min-height: 500px;
  }
  
  .hero-main {
    position: relative;
    width: 100%;
    height: 636px;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    padding: 184px 400px 184px 145px;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    align-self: stretch;
  }
  
  .hero-slideshow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }
  
  .hero-slide.active {
    opacity: 1;
  }
  
  .hero-slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-slide-overlay {
    position: absolute;
