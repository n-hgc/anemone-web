---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import newsData from '../../data/news.json';

export async function getStaticPaths() {
  return newsData.map((article) => ({
    params: { id: article.id.toString() },
    props: { article },
  }));
}

const { article } = Astro.props;
---

<Layout title={`${article.title} | little - Hair salon -`}>

  <!-- パンくずリスト -->
  <div class="breadcrumb">
    <div class="breadcrumb__container">
      <nav class="breadcrumb__nav">
        <a href="/" class="breadcrumb__link">ホーム</a>
        <span class="breadcrumb__separator">/</span>
        <a href="/news" class="breadcrumb__link">NEWS</a>
        <span class="breadcrumb__separator">/</span>
        <span class="breadcrumb__current">{article.title.substring(0, 20)}...</span>
      </nav>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <main class="news-detail-main">
    <div class="news-detail-container">
      
      <!-- ページタイトル -->
      <h1 class="news-detail-title section-title text-h1">
        NEWS<img src="/images/title_slash.svg" alt="/" class="title-slash" /><span class="news-detail-title-sub section-title-sub">お知らせ</span>
      </h1>

      <!-- ニュース記事 -->
      <article class="news-article">
        <!-- 記事メタ情報 -->
        <div class="news-article-meta">
          <time class="news-article-date">{article.date.replace(/-/g, '.').substring(0, 10)}</time>
          <span class="news-article-separator">|</span>
          <span class="news-article-category">{article.categories[0]}</span>
        </div>

        <!-- 記事タイトル -->
        <h2 class="news-article-title">{article.title}</h2>

        <!-- 記事画像 -->
        <div class="news-article-image">
          <img src={article.featured_image} alt={article.title} />
        </div>

        <!-- 記事本文 -->
        <div class="news-article-content">
          <p>{article.content}</p>
        </div>

        <!-- お知らせ一覧へボタン -->
        <div class="news-article-actions">
          <a href="/news" class="news-back-btn">
            おしらせ一覧へ
            <img src="/images/icons/icn_right_arrow.svg" alt="右矢印" class="news-back-btn-icon" />
          </a>
        </div>
      </article>
    </div>
  </main>

  <!-- フッター -->
  <Footer />
</Layout>

<style>
  @import "tailwindcss";
  
  /* パンくずリスト */
  .breadcrumb {
    background-color: var(--color-beige);
    padding: 92px 0 12px 0;
  }

  .breadcrumb__container {
    max-width: 1040px;
    margin: 0 auto;
    padding: 0 55px;
  }

  .breadcrumb__nav {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .breadcrumb__link {
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    font-weight: var(--font-weight-regular);
    color: var(--color-grey-dark);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .breadcrumb__link:hover {
    color: var(--color-brown);
  }

  .breadcrumb__separator {
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    color: var(--color-grey-dark);
  }

  .breadcrumb__current {
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    font-weight: var(--font-weight-regular);
    color: var(--color-grey-dark);
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* メインコンテンツ */
  .news-detail-main {
    background-color: var(--color-beige);
    min-height: calc(100vh - 80px - 24px);
    padding: 80px 0;
  }

  .news-detail-container {
    max-width: 1040px;
    margin: 0 auto;
    padding: 0 55px;
  }

  /* 共通セクションタイトル */
  .section-title {
    font-family: var(--font-family-yumincho);
    color: var(--color-black);
    text-align: left;
    height: 64px;
    font-size: 64px;
    line-height: 1.0;
  }
  
  .section-title-sub {
    font-size: 24px;
    vertical-align: middle;
  }

  /* タイトルスラッシュのスタイル */
  .title-slash {
    height: 28px;
    width: auto;
    margin: 0 0.5rem;
    display: inline-block;
  }

  /* ニュース記事 */
  .news-article {
    padding: 60px 0;
  }

  .news-article-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .news-article-date {
    font-family: "Zen Kaku Gothic New";
    font-size: 24px;
    font-weight: 500;
    line-height: 100%;
    color: #878C92;
  }

  .news-article-separator {
    font-family: "Zen Kaku Gothic New";
    font-size: 24px;
    font-weight: 500;
    line-height: 100%;
    color: #878C92;
  }

  .news-article-category {
    font-family: "Zen Kaku Gothic New";
    font-size: 24px;
    font-weight: 500;
    line-height: 100%;
    color: #878C92;
  }

  .news-article-title {
    font-family: var(--font-family-zenkaku);
    font-size: 32px;
    font-weight: var(--font-weight-medium);
    color: var(--color-black);
    margin-bottom: 2rem;
    line-height: 1.5;
    border-bottom: 4px solid var(--color-black);
    padding-bottom: 1rem;
  }

  .news-article-image {
    margin-bottom: 2rem;
    text-align: center;
  }

  .news-article-image img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .news-article-content {
    margin-bottom: 3rem;
  }

  .news-article-content p {
    font-family: var(--font-family-zenkaku);
    font-size: 16px;
    line-height: 1.8;
    color: var(--color-black);
    margin-bottom: 1.5rem;
  }

  .news-article-actions {
    text-align: center;
  }

  .news-back-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background-color: var(--color-grey-dark);
    color: var(--color-white);
    padding: 16px 32px;
    border-radius: 4px;
    text-decoration: none;
    font-family: var(--font-family-zenkaku);
    font-size: 16px;
    font-weight: var(--font-weight-medium);
    transition: background-color 0.3s ease;
  }

  .news-back-btn:hover {
    background-color: var(--color-brown);
  }

  .news-back-btn-icon {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }

  /* レスポンシブ対応 */
  @media (max-width: 1023px) {
    .news-detail-container {
      padding: 0 40px;
    }

    .section-title {
      height: auto;
      font-size: 48px;
    }
    
    .section-title-sub {
      font-size: 20px;
    }

    .news-article {
      padding: 32px 0;
    }

    .news-article-title {
      font-size: 28px;
    }
  }

  @media (max-width: 767px) {
    .breadcrumb__container {
      padding: 0 24px;
    }

    .news-detail-main {
      padding: 40px 0;
    }

    .news-detail-container {
      padding: 0 24px;
    }

    .section-title {
      display: flex;
      width: 170px;
      height: 75px;
      font-size: 36px;
      align-items: baseline;
      align-content: flex-start;
      gap: 6px 11px;
      flex-wrap: wrap;
    }
    
    .title-slash {
      margin: 0;
    }
    
    .section-title-sub {
      margin: 0;
      font-size: 16px;
    }

    .news-article {
    }

    .news-article-title {
      font-size: 24px;
    }

    .news-article-date,
    .news-article-separator,
    .news-article-category {
      font-family: "Zen Kaku Gothic New";
      font-size: 20px;
      font-weight: 500;
      line-height: 100%;
      color: #878C92;
    }

    .news-article-content p {
      font-size: 16px;
      line-height: 1.5;
    }

    .breadcrumb__current {
      max-width: 150px;
    }

    .news-back-btn {
      padding: 12px 24px;
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 28px;
    }
    
    .section-title-sub {
      font-size: 14px;
    }

    .news-article {
    }

    .news-article-title {
      font-size: 20px;
    }

    .breadcrumb__current {
      max-width: 120px;
    }
  }
</style>