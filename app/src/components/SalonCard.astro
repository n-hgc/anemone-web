---
import type { Salon } from '../types';
import { componentClasses, responsive } from '../lib/design-system';

export interface Props {
  salon: Salon;
}

const { salon } = Astro.props;
---

<div class={componentClasses.card.base}>
  {salon.photos.length > 0 && (
    <div class="aspect-w-16 aspect-h-9">
      <img 
        src={salon.photos[0]} 
        alt={`${salon.name}の外観`}
        class="w-full h-48 object-cover"
      />
    </div>
  )}
  
  <div class="p-6">
    <h3 class={responsive.text.h3 + ' text-black mb-2'}>
      {salon.name}
    </h3>
    
    <div class="space-y-2 text-grey_medium mb-4">
      <p class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        {salon.address}
      </p>
      
      <p class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <a href={`tel:${salon.tel}`} class="hover:text-brown transition-colors">
          {salon.tel}
        </a>
      </p>
      
      <p class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        {salon.hours}
      </p>
    </div>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {salon.facilities.map((facility) => (
        <span class="px-2 py-1 bg-beige text-brown_dark text-xs rounded-full">
          {facility}
        </span>
      ))}
    </div>
    
    <div class="flex space-x-3">
      <a 
        href={`/salon/${salon.id}`}
        class={componentClasses.button.primary + ' flex-1 text-center'}
      >
        詳細を見る
      </a>
      {salon.reservation_url && (
        <a 
          href={salon.reservation_url}
          target="_blank"
          rel="noopener noreferrer"
          class={componentClasses.button.secondary + ' flex-1 text-center'}
        >
          予約する
        </a>
      )}
    </div>
  </div>
</div>
