---
import type { SalonIndexData } from '../types';
import { componentClasses, responsive } from '../lib/design-system';

export interface Props {
  salon: SalonIndexData;
}

const { salon } = Astro.props;
---

<style>
  /* サロンカードのタイトルスタイル */
  .salon-card-name {
    font-size: 18px;
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: 10px;
    margin-top: 0;
    line-height: 1.25;
    font-family: var(--font-family-zenkaku);
  }
  
  /* サロンカードのボタンスタイル */
  .salon-card-btn {
    background-color: var(--color-white);
    color: var(--color-black);
    border: 1px solid var(--color-black);
    padding: 8px 16px;
    border-radius: 8px;
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  
  .salon-card-btn:hover {
    background-color: var(--color-black);
    color: var(--color-white);
  }

  /* サロンカードの情報スタイル */
  .salon-card-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 10px;
  }

  .salon-card-location,
  .salon-card-access {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
    color: #848383;
    line-height: 1.0;
    font-family: var(--font-family-zenkaku);
    font-weight: 700;
  }

  .salon-card-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    margin-top: 1px;
  }
</style>

<div class={componentClasses.card.base}>
  <div class="aspect-w-16 aspect-h-9">
    <img 
      src={salon.thumb} 
      alt={`${salon.title}の外観`}
      class="w-full h-48 object-cover"
    />
  </div>
  
  <div class="p-4">
    <h3 class="salon-card-name">
      {salon.title}【{salon.furigana}】
    </h3>
    
    <div class="salon-card-info">
      <div class="salon-card-location">
        <img src="/images/icons/icn_location_on.svg" alt="住所" class="salon-card-icon" />
        <span>
          {salon.prefecture && salon.prefecture.length > 0 ? salon.prefecture[0].name : ''}
          {(salon.prefecture && salon.prefecture.length > 0) && (salon.city && salon.city.length > 0) ? '・' : ''}
          {salon.city && salon.city.length > 0 ? salon.city[0].name : ''}
        </span>
      </div>
      
      <div class="salon-card-access">
        <img src="/images/icons/icn_directions_railway.svg" alt="アクセス" class="salon-card-icon" />
        <span>{salon.access || ''}</span>
      </div>
    </div>
    
    {salon.reservation_url && (
      <div class="mt-4">
        <a 
          href={salon.reservation_url}
          target="_blank"
          rel="noopener noreferrer"
          class="salon-card-btn"
        >
          予約・店舗詳細はこちら
        </a>
      </div>
    )}
  </div>
</div>
