<style>
  @import "tailwindcss";
  
  /* フッター */
  .footer {
    background-color: var(--color-grey-dark);
    padding: 60px 0 40px;
  }

  .footer__container {
    max-width: 484px;
    margin: 0 auto;
    text-align: center;
  }

  .footer__brand {
    margin-bottom: 40px;
    display: flex;
    gap: 8px;
    flex-direction: row;
    align-items: baseline;
    justify-content: center;
  }

  .footer__logo {
    font-family: var(--font-family-yumincho);
    font-size: 2.5rem;
    font-weight: var(--font-weight-medium);
    color: var(--color-white);
    margin: 0;
    line-height: 1.0;
  }

  .footer__tagline {
    font-family: var(--font-family-yumincho);
    font-size: 18px;
    font-weight: var(--font-weight-regular);
    color: var(--color-white);
    margin: 0;
    line-height: 1.0;
  }

  .footer__nav {
    display: flex;
    width: 480px;
    justify-content: center;
    align-items: center;
    gap: 0;
    margin: 0 auto 36px;
  }

  .footer__nav-link {
    font-family: var(--font-family-zenkaku);
    font-size: 12px;
    font-weight: var(--font-weight-regular);
    color: var(--color-white);
    text-decoration: none;
    padding: 8px;
    transition: color 0.3s ease;
  }

  .footer__nav-link:hover {
    color: var(--color-brown-light);
  }

  .footer__nav-separator {
    width: 1px;
    height: 16px;
    background-color: var(--color-white);
    opacity: 0.5;
  }

  .footer__recruit {
    text-align: center;
    margin-bottom: 3rem;
  }

  .footer__recruit-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    background: transparent;
    color: var(--color-white);
    border: 1px solid var(--color-white);
    padding: 24px 24px;
    border-radius: 6px;
    font-family: var(--font-family-zenkaku);
    font-size: 18px;
    line-height: 1.0;
    font-weight: var(--font-weight-regular);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .footer__recruit-btn:hover {
    background-color: var(--color-white);
    color: var(--color-grey-medium);
  }

  .footer__bottom {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 2rem;
  }

  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: all 0.3s ease;
    background-color: var(--color-white);
    color: var(--color-black);
  }

  .footer__social-link:hover {
    border: 1px solid var(--color-white);
    background-color: var(--color-grey-medium);
    color: var(--color-white);
  }

  .footer__social-icon {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .footer__partners {
    display: flex;
    gap: 10px;
  }

  .footer__partner-logo {
    height: 77px;
    width: auto;
    object-fit: contain;
  }

  .footer__copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin-bottom: 0;
  }

  .footer__copyright p {
    font-family: var(--font-family-zenkaku);
    font-size: 0.75rem;
    color: var(--color-white);
    opacity: 0.8;
    margin: 0;
  }

  /* レスポンシブ対応 */
  @media (max-width: 1023px) {
    .footer__container {
      padding: 0 40px;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: 40px 0 20px;
    }
    
    .footer__container {
      padding: 0 1rem;
    }
    
    .footer__brand {
      margin-bottom: 2rem;
    }

    .footer__logo {
      font-size: 48px;
    }

    .footer__tagline {
      font-size: 14px;
    }

    .footer__nav {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 0px 1rem;
      width: 100%;
    }
    
    .footer__nav-link {
      font-size: 12px;
      padding: 8px;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 12px;
    } 

    .footer__partners {
      flex-direction: row;
      margin-bottom: 2rem;
    }
    
    .footer__partner-logo {
      width: auto;
      height: 72px;
    }
  }
</style>
