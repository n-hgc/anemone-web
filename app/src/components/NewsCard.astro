---
import type { News } from '../types';

export interface Props {
  news: News;
  featured?: boolean;
}

const { news, featured = false } = Astro.props;

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<article class={`${featured ? 'md:col-span-2' : ''} bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow`}>
  {news.featured_image && (
    <div class="aspect-w-16 aspect-h-9">
      <img 
        src={news.featured_image} 
        alt={news.title}
        class="w-full h-48 object-cover"
      />
    </div>
  )}
  
  <div class="p-6">
    <div class="flex items-center space-x-2 mb-2">
      <time class="text-sm text-gray-500" datetime={news.date}>
        {formatDate(news.date)}
      </time>
      {news.categories.length > 0 && (
        <span class="px-2 py-1 bg-pink-100 text-pink-800 text-xs rounded-full">
          {news.categories[0]}
        </span>
      )}
    </div>
    
    <h3 class={`${featured ? 'text-2xl' : 'text-xl'} font-semibold text-gray-900 mb-3`}>
      <a href={`/news/${news.id}`} class="hover:text-pink-600 transition-colors">
        {news.title}
      </a>
    </h3>
    
    <p class="text-gray-600 mb-4 line-clamp-3">
      {news.excerpt}
    </p>
    
    <div class="flex items-center justify-between">
      <a 
        href={`/news/${news.id}`}
        class="text-pink-600 hover:text-pink-700 font-medium"
      >
        続きを読む →
      </a>
      
      {news.tags.length > 0 && (
        <div class="flex flex-wrap gap-1">
          {news.tags.slice(0, 3).map((tag) => (
            <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
