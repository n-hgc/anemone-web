---
import type { News } from '../types';

export interface Props {
  news: News;
  featured?: boolean;
}

const { news, featured = false } = Astro.props;

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit'
  }).replace(/\//g, '.');
};
---

<article class="news-card">
  {news.featured_image && (
    <div class="news-card__image">
      <img 
        src={news.featured_image} 
        alt={news.title}
        class="news-card__img"
      />
    </div>
  )}
  
  <div class="news-card__content">
    <div class="news-card__meta">
      <time class="news-card__date" datetime={news.date}>
        {formatDate(news.date)}
      </time>
      {news.categories.length > 0 && (
        <span class="news-card__category">
          {news.categories[0]}
        </span>
      )}
    </div>
    
    <h3 class="news-card__title">
      <a href={`/news/${news.id}`} class="news-card__title-link">
        {news.title}
      </a>
    </h3>
    
    <p class="news-card__excerpt">
      {news.excerpt}
    </p>
  </div>
</article>

<style>
  .news-card {
    display: flex;
    gap: 20px;
    padding: 20px 0;
    border-bottom: 1px solid #E0E0E0;
  }

  .news-card:last-child {
    border-bottom: none;
  }

  .news-card__image {
    flex-shrink: 0;
    width: 120px;
    height: 120px;
  }

  .news-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .news-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .news-card__meta {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 4px;
  }

  .news-card__date {
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    font-weight: var(--font-weight-regular);
    color: var(--color-grey-dark);
  }

  .news-card__category {
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    font-weight: var(--font-weight-regular);
    color: var(--color-grey-dark);
  }

  .news-card__title {
    margin: 0;
  }

  .news-card__title-link {
    font-family: var(--font-family-yumincho);
    font-size: 18px;
    font-weight: var(--font-weight-medium);
    color: var(--color-black);
    text-decoration: none;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .news-card__title-link:hover {
    color: var(--color-brown);
  }

  .news-card__excerpt {
    font-family: var(--font-family-zenkaku);
    font-size: 14px;
    font-weight: var(--font-weight-regular);
    color: var(--color-grey-dark);
    line-height: 1.6;
    margin: 0;
  }

  /* レスポンシブ対応 */
  @media (max-width: 767px) {
    .news-card {
      flex-direction: column;
      gap: 12px;
      padding: 16px 0;
    }

    .news-card__image {
      width: 100%;
      height: 200px;
    }

    .news-card__title-link {
      font-size: 16px;
    }

    .news-card__excerpt {
      font-size: 13px;
    }
  }
</style>
