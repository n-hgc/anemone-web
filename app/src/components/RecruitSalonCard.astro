---
export interface Props {
  salon: {
    id: string;
    name: string;
    nameReading: string;
    image: string;
    tags: Array<{
      type: string;
      label: string;
    }>;
    jobType: string;
    location: string;
    access: string;
    buttonText: string;
    buttonLink: string;
  };
  icons: {
    jobType: string;
    location: string;
    access: string;
  };
}

const { salon, icons } = Astro.props;
---

<div class="recruit-environment__salon-card">
  <img 
    src={salon.image} 
    alt={salon.name} 
    class="recruit-environment__salon-image"
  />
  <div class="recruit-environment__salon-tags">
    {salon.tags.map(tag => (
      <span class={`recruit-environment__salon-tag recruit-environment__salon-tag--${tag.type}`}>{tag.label}</span>
    ))}
  </div>
  <div class="recruit-environment__salon-content">
    <h4 class="recruit-environment__salon-name">
      {salon.name} 【{salon.nameReading}】
    </h4>
    <div class="recruit-environment__salon-info">
      <div class="recruit-environment__salon-job">
        <img src={icons.jobType} alt="職種" class="recruit-environment__salon-icon" />
        <span>{salon.jobType}</span>
      </div>
      <div class="recruit-environment__salon-location">
        <img src={icons.location} alt="所在地" class="recruit-environment__salon-icon" />
        <span>{salon.location}</span>
      </div>
      <div class="recruit-environment__salon-access">
        <img src={icons.access} alt="アクセス" class="recruit-environment__salon-icon" />
        <span>{salon.access}</span>
      </div>
    </div>
    <button class="recruit-environment__salon-btn">
      <a href={salon.buttonLink}>{salon.buttonText}</a>
    </button>
  </div>
</div>

<style>
  .recruit-environment__salon-card {
    background-color: white;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 428px;
  }

  .recruit-environment__salon-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .recruit-environment__salon-image {
    width: 100%;
    height: 159px;
    object-fit: cover;
  }

  .recruit-environment__salon-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 16px 16px 10px;
  }

  .recruit-environment__salon-tag {
    background-color: var(--color-beige);
    color: var(--color-black);
    padding: 0px 4px;
    border-radius: 4px;
    font-size: 16px;
    line-height: 1.5;
    font-weight: 200;
    font-family: var(--font-family-zenkaku);
  }

  .recruit-environment__salon-tag--new-graduate {
    background-color: #E3F3F5;
  }

  .recruit-environment__salon-tag--mid-career {
    background-color: #FFF1E4;
  }

  .recruit-environment__salon-tag--full-time {
    background-color: #FAF4E8;
  }

  .recruit-environment__salon-tag--part-time {
    background-color: #EFFAE8;
  }

  .recruit-environment__salon-content {
    padding: 0 16px 16px;
    display: flex;
    flex-direction: column;
    height: calc(100% - 229px);
    justify-content: space-between;
  }

  .recruit-environment__salon-name {
    font-size: 18px;
    font-weight: 700;
    color: var(--color-black);
    margin-bottom: 12px;
    margin-top: 0;
    line-height: 1.25;
    font-family: var(--font-family-zenkaku);
  }

  .recruit-environment__salon-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 10px;
  }

  .recruit-environment__salon-job,
  .recruit-environment__salon-location,
  .recruit-environment__salon-access {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
    color: #848383;
    line-height: 1.0;
    font-family: var(--font-family-zenkaku);
    font-weight: 700;
  }

  .recruit-environment__salon-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    margin-top: 1px;
  }

  .recruit-environment__salon-btn {
    background-color: var(--color-white);
    color: var(--color-black);
    border: 1px solid var(--color-black);
    padding: 8px 16px;
    border-radius: 8px;
    font-family: var(--font-family-zenkaku);
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    width: 100%;
    margin-top: auto;
    transition: all 0.3s ease;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .recruit-environment__salon-btn:hover {
    background-color: var(--color-black);
    color: var(--color-white);
  }

  .recruit-environment__salon-btn a {
    color: inherit;
    text-decoration: none;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
