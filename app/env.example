# WordPress REST API設定
WP_API_URL=https://your-wordpress-site.com/wp-json/wp/v2

# WordPress Basic認証設定（WordPress 5.8推奨）
WP_BASIC_AUTH_USERNAME=your_username
WP_BASIC_AUTH_PASSWORD=your_password

# NEWSデータソース設定
# wp: WordPressから取得, mock: モックJSONを使用, 未設定: WP_API_URLがあればWP、なければモック
NEWS_DATA_SOURCE=wp

# 開発環境設定
NODE_ENV=development

# サイト設定
SITE_URL=https://anemone-salon.com
SITE_NAME=アネモネサロン

# Figma設定（将来使用）
FIGMA_FILE_URL=https://www.figma.com/design/kRVC29kld4299v1Gyby1Hg/anemone-v1
FIGMA_ACCESS_TOKEN=your_figma_token_here

# Basic認証の設定
# 認証を有効にするかどうか (true/false)
BASIC_AUTH_ENABLED=false

# 認証情報 (username:password の形式)
# 例: admin:password123
BASIC_AUTH_CREDENTIALS=admin:password123

# 公開サイトのWordPressベースURL（生成スクリプト用）
WP_BASE_URL=https://anemone-salon.com
